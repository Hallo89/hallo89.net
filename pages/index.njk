    <script>
      const randomSubheader = [
        "An ode to Nesewebel",
        "A tale of Sparxdev",
        "Rectangulous precipitation",
        "Numerical apparatus",
        "An acceptable website",
        "Geometrical calculation",
        "Graphical utilization",
        "Resourceful bundling",
        "Component-relative outlaying",
        "Anumismatic fragment painting",
        "[object WebDeveloper]"
      ];
    </script>
