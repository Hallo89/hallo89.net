<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    {% include 'pages/templates/common-head.njk' %}
    <link rel="stylesheet" href="/style/tools/base.css">
    <link rel="stylesheet" href="/style/tools/textio.css">
    <link rel="stylesheet" href="/style/tools/mocking.css">
  </head>
  <body>
    <div id="wrapper">

      <div class="box">
        <div class="box-header">
          <span class="header_text">Mocking generator</span>
          <div class="utility_buttons">
            <span class="util_button button_smallscreen active"></span>
            <span class="util_button button_fullscreen"></span>
            <span class="util_button button_close"></span>
          </div>
        </div>
        <div class="input_container">
          <div class="input_box text_input">
            <div class="input_header">Input</div>
            <textarea class="input text" spellcheck="false"></textarea>
          </div>
        </div>
        <div class="input_container">
          <div class="input_box button noselect" onclick="mockingText()">
            <span class="input_header">Go!</span>
          </div>
        </div>
        <div class="text_box text_content" id="output"></div>
      </div>

    </div>

    <script src="/script/tools/base.js"></script>
    <script src="/script/tools/textio.js"></script>
    <script src="/script/tools/mOCkiNg.js"></script>
  </body>
</html>
