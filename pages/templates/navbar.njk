<div id="navbar">
  <nav class="text">
    <a href="/"><img src="/image/Avatar.png" alt="Hallo89 logo"></a>
    <a href="/" class="name">Hallo89</a>
    <span class="arrow">></span>
    {{ '<h1>' | safe if pageData.navBarH1 }}
      <a href="{{ '/' + page }}" class="item">{{ name | capitalize }}</a>
    {{ '</h1>' | safe if pageData.navBarH1 }}
  </nav>
  {%- if navContent %}
    {{ navContent | safe }}
  {%- endif %}
  {%- if pageData.lightMode %}
  <aside id="modes">
    <button type="button" class="mode_gear">
      {# Weirdly enough, Nunjucks can't fetch the svg from /source/ #}
      {% include './cog-solid.svg' %}
    </button>
    <div class="dropdown_box">
      <div class="dropdown_header">modes</div>
      <div class="dropdown_text">
        <span class="mode_switch switch_daynight" onclick="toggleMode()">Light Theme</span>
      </div>
    </div>
  </aside>
  {%- endif %}
</div>
