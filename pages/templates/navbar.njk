{% macro navbar(thisPage, heading = false, modes = false, content = true) %}
<div id="navbar">
  <nav class="text">
    <a href="../"><img src="../Avatar.png" alt="Hallo89 logo"></a>
    <a href="../" class="name">Hallo89</a>
    <span class="arrow">></span>
    {% if heading %}
      <{{ heading }}><a href="{{ thisPage }}" class="item">{{ thisPage | capitalize }}</a></{{ heading }}>
    {% else %}
      <a href="{{ thisPage }}" class="item">{{ thisPage | capitalize }}</a>
    {% endif %}
  </nav>
  {% if content %}
  {{ caller() }}
  {% endif %}
  {% if modes %}
  <aside id="modes">
    <button type="button" class="mode_gear fa fa-cog" onclick="toggleDropdown()"></button>
    <div class="dropdown_box">
      <div class="dropdown_header">modes</div>
      <div class="dropdown_text">
        <span class="mode_switch switch_daynight" onclick="toggleMode()">Light Theme</span>
      </div>
    </div>
  </aside>
  {% endif %}
</div>
{% endmacro %}
